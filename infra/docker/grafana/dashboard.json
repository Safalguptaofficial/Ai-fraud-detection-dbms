{
  "dashboard": {
    "title": "Fraud Detection System Dashboard",
    "uid": "fraud-dbms-dashboard",
    "version": 1,
    "refresh": "30s",
    "timezone": "browser",
    "schemaVersion": 16,
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "API Service"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Request Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, http_request_duration_seconds_bucket)",
            "legendFormat": "95th percentile"
          }
        ]
      },
      {
        "id": 4,
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "up{instance=\"oracle:1521\"}",
            "legendFormat": "Oracle"
          },
          {
            "expr": "up{instance=\"postgres:5432\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{instance=\"mongo:27017\"}",
            "legendFormat": "MongoDB"
          }
        ]
      },
      {
        "id": 5,
        "title": "Fraud Alerts Trend",
        "type": "graph",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "increase(fraud_alerts_total[5m])",
            "legendFormat": "New Alerts"
          }
        ]
      }
    ]
  }
}
